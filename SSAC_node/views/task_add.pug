.modal-dialog.modal-dialog-centered
  .modal-content
    .modal-header
      h5#AddModalLabel.modal-title New Task
      button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
    .modal-body
      form
        .mb-3 
          label.from-label Name
          input.form-control#TaskName(type='text' aria-describedby="Task Name")
          .form-text#LogHelp Enter Task name
        .mb-3
          label.form-label Crawler
          select.form-select#crawler-select(aria-label='Crawler Option' onchange="CrawlerChange()")
            option(selected) Choose Crawler
            -for(crawler in data)
              option(value=crawler) #{crawler}
        .mb-3
          label.form-label Spider
          select.form-select.form-select-sm#spider-select(aria-label='Spider Option' onchange="SpiderChange()" disabled)
            option(selected) Choose Spider
        .mb-3 
          label.from-label Log
          input.form-control#LogText(type='text' aria-describedby="LogHelp")
          .form-text#LogHelp Enter log file name
        .mb-3#parameters
    .modal-footer
      button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
      button.btn.btn-primary(type='button' onclick="Submit()") Submit